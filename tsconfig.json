{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitThis": false,
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "hyperapp": ["types/hyperapp.d.ts"],
      "@hyperapp/html": ["types/hyperapp-html.d.ts"],
      "@/*": ["./app/*"]
    }
  },
  "include": ["types/*.d.ts", "app/**/*.js"]
}
